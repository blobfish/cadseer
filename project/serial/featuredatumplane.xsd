<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  targetNamespace="http://www.cadseer.com/prj/srl"
  xmlns:srl="http://www.cadseer.com/prj/srl"
>
  
<xs:include schemaLocation="featurebase.xsd"/>

<xs:complexType name="DatumPlanePlanarOffset">
  <xs:all>
    <xs:element name="facePick" type="srl:Pick"/>
    <xs:element name="offset" type="srl:Parameter"/>
  </xs:all>
</xs:complexType>

<xs:complexType name="DatumPlanePlanarCenter">
  <xs:all>
    <xs:element name="facePick1" type="srl:Pick"/>
    <xs:element name="facePick2" type="srl:Pick"/>
  </xs:all>
</xs:complexType>

<xs:complexType name="DatumPlanePlanarParallelThroughEdge">
  <xs:all>
    <xs:element name="facePick" type="srl:Pick"/>
    <xs:element name="edgePick" type="srl:Pick"/>
  </xs:all>
</xs:complexType>

<xs:complexType name="SolverChoice">
  <xs:choice>
    <xs:element name="offset" type="srl:DatumPlanePlanarOffset"/>
    <xs:element name="center" type="srl:DatumPlanePlanarCenter"/>
    <xs:element name="parallelThroughEdge" type="srl:DatumPlanePlanarParallelThroughEdge"/>
  </xs:choice>
</xs:complexType>
  
<xs:complexType name="FeatureDatumPlane">
  <xs:all>
    <xs:element name="featureBase" type="srl:FeatureBase"/>
    <xs:element name="radius" type="srl:Parameter"/>
    <xs:element name="autoSize" type="srl:Parameter"/>
    <xs:element name="matrix" type="srl:Matrixd"/>
    <xs:element name="solverChoice" type="srl:SolverChoice"/>
  </xs:all>
</xs:complexType>

<xs:element name="datumPlane" type="srl:FeatureDatumPlane"/>
  
</xs:schema> 
